<head>
	
	<!-- Agility - Responsive HTML5/CSS3 Template by SevenSpark http://agility-html.sevenspark.com -->

	<!-- Basic Page Needs
  	================================================== -->
	<meta charset="utf-8">
  <title><%= title %></title>
	<meta name="description" content="Byodeal is a community of travel lovers sharing travel deals">
	<%= csrf_meta_tag %>
	<%= javascript_include_tag "jquery.min", "jquery_ujs", "application", "jquery-ui.min", "jquery-ui-timepicker-addon", "jquery.validate.min", "modernizr", "agility" %>
	
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<!-- Mobile Specific Metas
  	================================================== -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<!-- CSS
  	================================================== -->
	<%= stylesheet_link_tag "application", "base", "flexslider", "jquery-ui-1.8.20.custom", "layout", "prettyPhoto", "skeleton" %>

	
	<!-- Favicons
	================================================== -->
	<%= favicon_link_tag %>

	<!-- Fonts
	================================================== -->	
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,700' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
	
	<!--[if IE 7]>
	  <link rel="stylesheet" href="/assets/ie7.css">
	<![endif]-->
		
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-34247364-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>		

</head>
<body class="skin-red">
<div class="wrap">


	<!-- Primary Page Layout
	================================================== -->

	<!-- Header -->
	<%= render 'layouts/header' %>
	<!-- end Header -->
	
	<!-- Main Container -->
	<div class="container">
			
		<!-- #main content -->
		<div class="single eleven columns"  id="main" role="main">
			<% flash.each do |key, value| %>
				<div class="notification notification-<%= key %>"><%= value %></div>
			<% end %>
			<%= yield %>
		</div>		
		<!-- end #main content layout -->
			
			
		<!-- sidebar -->
		<div class="sidebar four columns offset-by-one">			
			<% unless signed_in? %>
				<aside>
					<h3>Travel more</h3>
					<p>Get the top deals in a daily email now.</p>
					
					<%= link_to "Sign up now!", new_user_registration_path, :class => "button button-red button-full" %>			
				</aside>
			<% end %>		
		</div>
		<!-- end .sidebar -->	
			
			
			
	</div>
	<!-- end .container -->



	<!-- footer -->
	<%= render 'layouts/footer' %>
	<!-- end footer -->
	
</div>
<!-- end .wrap -->

<!--[if (gte IE 6)&(lte IE 8)]>
	<%= stylesheet_link_tag "fix-ie" %>
<![endif]-->

<!-- end Scripts -->


<!-- End Document
================================================== -->

